{
  "name": "PR Monitor",
  "version": "0.0.6",
  "description": "Get notified when you receive a pull request on GitHub.",
  "permissions": ["alarms", "notifications", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "manifest_version": 2
}
